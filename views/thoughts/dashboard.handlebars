<div class='dashboard'>
  <div class='title-container'>
    <h2>Dashboard</h2>
    <a href='/thoughts/create' class='btn'>Criar Pensamentos</a>
  </div>
  <h3>Seus Pensamentos</h3>

  <ul>

  {{#each thoughts}}
    <li>
      <span>
      {{this.title}}
      </span>
      <span class="actions">
        <a href="/thoughts/edit/{{this.id}}" class="btn">Editar</a>
        <form action="/thoughts/remove" method="post">
          <input type="hidden" name="id" value="{{this.id}}">
          <input type="submit" value="Excluir" class="btn">
        </form>
      </span>

      </li>
  {{/each}}

  </ul>

      {{#if emptyThoughts}}
      <p>Não há Pensamentos, comece a criar <a href="/thoughts/create">clicando aqui</a></p>
      {{/if}}

</div>